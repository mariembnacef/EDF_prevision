# Utilise une image Python légère
FROM python:3.9-slim

# Définit le répertoire de travail
WORKDIR /app

# Installation des dépendances système pour XGBoost
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copie et installation des dépendances d'abord (pour profiter du cache Docker)
COPY requirements.txt .
RUN pip install -r requirements.txt xgboost scikit-learn

# Créer explicitement le répertoire models
RUN mkdir -p models

# Copie du code de l'API (vous avez un COPY répété qui est superflu)
COPY . /app

# Expose le port FastAPI
EXPOSE 8001

# Commande par défaut pour lancer l'API
CMD ["uvicorn", "api:app", "--host", "0.0.0.0", "--port", "8001"]